<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
			 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.rhpsoft.hibernate.core.beans">
	  <class name="Employee" table="EMPLOYEES"  >
		
			<id name="employeeId" column="EMPLOYEE_ID">
				<generator class="increment"></generator>
			</id>
          
            
           <property name="firstName" column="FIRST_NAME"></property>
           <property name="lastName" column="LAST_NAME"></property>
           <property name="email" column="EMAIL"></property>
           <property name="hireDate" column="HIRE_DATE"  type="date"></property>
           <property name="salary" column="SALARY"  type="double"></property>
           <property name="departmentId" column="DEPARTMENT_ID"></property>
           <property name="jobId" column="JOB_ID" ></property>
 
 	</class>
       
		
 

</hibernate-mapping>


